{
  "name": "@thaunknown/simple-peer",
  "description": "Simple one-to-one WebRTC video/voice and data channels",
  "version": "10.0.12",
  "type": "module",
  "author": {
    "name": "ThaUnknown",
    "email": "casistaken@gmail.com",
    "url": "http://github.com/ThaUnknown"
  },
  "bugs": {
    "url": "https://github.com/thaunknown/simple-websocket/issues"
  },
  "dependencies": {
    "debug": "^4.3.7",
    "err-code": "^3.0.1",
    "streamx": "^2.20.1",
    "uint8-util": "^2.2.5",
    "webrtc-polyfill": "^1.1.10"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/debug": "^4.1.12",
    "@types/node": "^24.10.2",
    "@types/streamx": "^2.9.5",
    "@types/webrtc": "^0.0.47",
    "@vitest/browser": "^4.0.15",
    "@vitest/browser-playwright": "^4.0.15",
    "bowser": "^2.11.0",
    "buffer": "^6.0.3",
    "cross-env": "^7.0.3",
    "events": "^3.3.0",
    "happy-dom": "^20.0.11",
    "playwright": "^1.57.0",
    "prettier-bytes": "^1.0.4",
    "process": "^0.11.10",
    "speedometer": "^1.1.0",
    "stream-browserify": "^3.0.0",
    "string-to-stream": "^3.0.1",
    "thunky": "^1.1.0",
    "typescript": "^5.9.3",
    "util": "^0.12.5",
    "vite": "^7.2.7",
    "vitest": "^4.0.15",
    "ws": "^8.18.0"
  },
  "keywords": [
    "data",
    "data channel",
    "data channel stream",
    "data channels",
    "p2p",
    "peer",
    "peer",
    "peer-to-peer",
    "stream",
    "video",
    "voice",
    "webrtc",
    "webrtc stream"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./lite": {
      "types": "./dist/lite.d.ts",
      "default": "./dist/lite.js"
    },
    "./full": {
      "types": "./dist/full.d.ts",
      "default": "./dist/full.js"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/thaunknown/simple-peer.git"
  },
  "scripts": {
    "build": "tsc",
    "prebuild": "rm -rf dist",
    "prepublishOnly": "npm run build",
    "test": "npm run build && vitest run",
    "test:watch": "vitest",
    "test-node": "vitest run",
    "test-browser": "npm run build && vitest run --config vitest.browser.config.ts",
    "test-browser-local": "npm run build && vitest --config vitest.browser.config.ts",
    "test-browser-all": "npm run test-browser-chromium && npm run test-browser-firefox && npm run test-browser-webkit",
    "test-browser-chromium": "npm run build && vitest run --config vitest.browser.config.ts --browser.name=chromium --browser.headless",
    "test-browser-firefox": "npm run build && vitest run --config vitest.browser.config.ts --browser.name=firefox --browser.headless",
    "test-browser-webkit": "npm run build && vitest run --config vitest.browser.config.ts --browser.name=webkit --browser.headless"
  },
  "contributors": [
    {
      "name": "Feross Aboukhadijeh",
      "email": "feross@feross.org",
      "url": "https://feross.org"
    }
  ]
}
